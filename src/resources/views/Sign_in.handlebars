<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">{{title}}</h1>
  {{#if error}}
    <p class="text-red-500 mb-4">{{error}}</p>
  {{/if}}
  <form method="POST" action="{{#if isSignup}}/signup{{else}}/login{{/if}}" class="space-y-4">
    {{#if isSignup}}
      <div>
        <label for="student_id" class="block text-sm font-medium">Student ID</label>
        <input type="number" name="student_id" id="student_id" class="border rounded p-2 w-full" required />
      </div>
      <div>
        <label for="student_name" class="block text-sm font-medium">Name</label>
        <input type="text" name="student_name" id="student_name" class="border rounded p-2 w-full" required />
      </div>
    {{/if}}
    <div>
      <label for="email" class="block text-sm font-medium">Email</label>
      <input type="email" name="email" id="email" class="border rounded p-2 w-full" required />
    </div>
    <div>
      <label for="password" class="block text-sm font-medium">Password</label>
      <input type="password" name="password" id="password" class="border rounded p-2 w-full" required />
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">{{title}}</button>
    <a href="/signup" class="text-blue-500 hover:underline">Sign Up</a>
  </form>
</div>